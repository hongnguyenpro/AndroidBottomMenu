<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    >

    <View
        android:id="@+id/layout_divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/bottom_bar_divider"
        />

    <LinearLayout
        android:id="@+id/layout_group_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_divider"
        android:orientation="horizontal"
        >

        <!-- TODO correct the path -->
        <com.toong.androidbottommenu.bottombar.BottomMenuItem
            android:id="@+id/menu_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:normalImage="@drawable/posttask"
            app:normalTitleColor="#000"
            app:selectedImage="@drawable/posttask_selected"
            app:selectedTitleColor="#f00"
            app:title="Tab 1"
            />

        <!-- TODO correct the path -->
        <com.toong.androidbottommenu.bottombar.BottomMenuItem
            android:id="@+id/menu_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:normalImage="@drawable/mytasks"
            app:normalTitleColor="#000"
            app:selectedImage="@drawable/mytask_selected"
            app:selectedTitleColor="#0ff"
            app:title="Tab 2"
            />

        <!-- TODO correct the path -->
        <com.toong.androidbottommenu.bottombar.BottomMenuItem
            android:id="@+id/menu_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:normalImage="@drawable/alltasks"
            app:selectedImage="@drawable/alltasks_selected"
            app:title="Tab 3"
            />

        <!-- TODO correct the path -->
        <com.toong.androidbottommenu.bottombar.BottomMenuItem
            android:id="@+id/menu_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:normalImage="@drawable/history"
            app:selectedImage="@drawable/history_selected"
            app:title="Tab 4"
            />

        <!-- TODO correct the path -->
        <com.toong.androidbottommenu.bottombar.BottomMenuItem
            android:id="@+id/menu_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:normalImage="@drawable/more"
            app:selectedImage="@drawable/more_selected"
            app:title="Tab 5"
            />
    </LinearLayout>
</RelativeLayout>
